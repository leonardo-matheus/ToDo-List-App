<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingVertical="10dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <!-- Checkbox Circle -->
    <FrameLayout
        android:layout_width="24dp"
        android:layout_height="24dp">

        <View
            android:id="@+id/checkbox_bg"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/bg_checkbox_unchecked" />

        <ImageView
            android:id="@+id/iv_check"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check"
            android:padding="4dp"
            app:tint="@color/white"
            android:visibility="gone" />
    </FrameLayout>

    <!-- Task Content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update planner"
            android:textSize="14sp"
            android:textColor="@color/text_primary" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp">

            <!-- Time -->
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_time"
                app:tint="@color/text_hint" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="09:00"
                android:textSize="11sp"
                android:textColor="@color/text_hint" />

            <!-- Reminder -->
            <ImageView
                android:id="@+id/iv_reminder"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_notification_small"
                app:tint="@color/text_hint"
                android:visibility="gone" />

            <!-- Priority -->
            <TextView
                android:id="@+id/tv_priority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="High"
                android:textSize="11sp"
                android:textColor="@color/error"
                android:drawableStart="@drawable/ic_priority"
                android:drawablePadding="4dp"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
