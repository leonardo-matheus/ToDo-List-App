{
  "openapi": "3.0.3",
  "info": {
    "title": "Todo App API",
    "description": "API REST para gerenciamento de tarefas e listas do Todo App. Suporta autenticação JWT, CRUD de listas e tarefas, e sincronização entre dispositivos.",
    "version": "1.0.0",
    "contact": {
      "name": "Todo App Support"
    }
  },
  "servers": [
    {
      "url": "/api-php",
      "description": "Servidor de desenvolvimento"
    }
  ],
  "tags": [
    {
      "name": "Auth",
      "description": "Autenticação de usuários"
    },
    {
      "name": "Lists",
      "description": "Gerenciamento de listas de tarefas"
    },
    {
      "name": "Tasks",
      "description": "Gerenciamento de tarefas"
    },
    {
      "name": "Sync",
      "description": "Sincronização de dados entre dispositivos"
    }
  ],
