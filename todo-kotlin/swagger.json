  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "Token JWT obtido no login ou registro"
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "UUID do usuário",
            "example": "a1b2c3d4-e5f6-7890-abcd-ef1234567890"
          },
          "username": {
            "type": "string",
            "description": "Nome de exibição do usuário",
            "example": "João Silva"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "Email do usuário",
            "example": "joao@email.com"
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "description": "Data de criação da conta",
            "example": "2024-01-15 10:30:00"
          }
        }
      },
      "List": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "UUID da lista",
            "example": "b2c3d4e5-f6a7-8901-bcde-f23456789012"
          },
          "user_id": {
            "type": "string",
            "format": "uuid",
            "description": "UUID do usuário proprietário",
            "example": "a1b2c3d4-e5f6-7890-abcd-ef1234567890"
          },
          "name": {
            "type": "string",
            "description": "Nome da lista",
            "example": "Compras do Mês"
          },
          "color": {
            "type": "string",
            "description": "Cor da lista em hexadecimal",
            "example": "#3B82F6"
